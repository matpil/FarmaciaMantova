<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mn1LL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:background="@drawable/bg_box"
    android:gravity="top"
    android:measureWithLargestChild="true"
    android:orientation="vertical"
    android:padding="10dp" >    
    
    <TextView
        android:id="@+id/localitaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="@string/genericString"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/localitaTv"
        android:layout_below="@+id/localitaTv"
        android:gravity="left"
        android:text="@string/genericString"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomeTv"
        android:layout_below="@+id/nomeTv"
        android:gravity="right"
        android:text="@string/genericString"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/TelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addressTv"
        android:layout_below="@+id/addressTv"
        android:text="@string/genericString"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
<!-- -->

    <TextView
        android:id="@+id/noteTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TelTv"
        android:layout_below="@+id/TelTv"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>