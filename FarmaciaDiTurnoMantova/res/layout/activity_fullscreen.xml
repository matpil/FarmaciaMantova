<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aa00"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="1dp" >

    <TableRow
        android:id="@+id/intestazioneRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00aa00"
        android:orientation="horizontal" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="1dp"
                android:paddingLeft="100dp"
                android:paddingRight="50dp"
                android:src="@drawable/farmacie_di_turno_70" />

            <LinearLayout
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nomeFarmaciaTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="FARMACIA &quot;TORRAZZO&quot;  dr.ssa Adriana Marcella Bianco"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/indirizzoTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="via G. Garibaldi 32   COMMESSAGGIO (MN)"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/telefonoTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="tel. 0376-98127"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </GridLayout>
    </TableRow>

    <TableRow
        android:id="@+id/infoGeneric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2" >

            <TextView
                android:id="@+id/widget56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="75dp"
                android:paddingTop="5dp"
                android:text="SERVIZIO DI GUARDIA FARMACEUTICA"
                android:textColor="#008800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="FARMACIE APERTE PER TURNO"
                android:textColor="#008800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_rowSpan="2"
                android:paddingBottom="5dp"
                android:text="ORARIO DI APERTURA DELLE FARMACIE DI TURNO: 8:30-12:30  15:30-20:00"
                android:textColor="#008800"
                android:textSize="15sp"
                android:textStyle="bold" />

        </GridLayout>
    </TableRow>

    <TableRow
        android:id="@+id/infoGiorno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <!--
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:dividerPadding="15dp"
            android:padding="20dp"
            android:showDividers="beginning" >

        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="80dp"
                android:text=""
                android:textColor="#DC143C"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="120dp"
                android:text="@string/period"
                android:textColor="#DC143C"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/farma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:verticalSpacing="3dp" >
        </GridView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <RelativeLayout>
            

            <TextView
                android:id="@+id/chiamateUrgenzaTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/chiamateUrgenti"
		        android:layout_marginLeft="50dp"
		        android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
                        
            <TextView
                android:id="@+id/chiamateUrgenzaCostoTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/chiamateUrgenzaTv"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="@string/chiamateUrgentiCostoDefault"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </TableRow>

</TableLayout>